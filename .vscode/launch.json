  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Deno",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "-A", "./src/app.ts"],
      "port": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Test Deno",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "-A",
        "--inspect-brk"
      ],
      "port": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Deno Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}